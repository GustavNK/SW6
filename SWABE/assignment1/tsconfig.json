{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
      "preserveConstEnums": true,
      "allowUnreachableCode": false,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noUnusedParameters": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}